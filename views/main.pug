    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title 毛小孩星球
    link(rel="stylesheet", href="style.css")
  body 
    header
      a.logo(href="/") 毛小孩星球
      input#ham(type="checkbox")
      label.ham(for="ham")
        .ham--line
      nav.nav
        a.nav--item(href="#activity") 近期活動
        a.nav--item(href="#album") 狗兒相片
        a.nav--item(href="#adoption") 領養資訊

    section#activity
      .container
        .rec.main
          h1.rec--title 帶毛小孩回家吧
          p.rec--description Bring them back home
          a.rec--button(href="#") 領養去
        .rec.sub--left
          h1.rec--title 捐款送玩偶
          p.rec--description NTD 100
          a.rec--button(href="#") 捐款
        .rec.sub--right
          h1.rec--title 捐款送狗骨頭
          p.rec--description NTD 300
          a.rec--button(href="#") 捐款

